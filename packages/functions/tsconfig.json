{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "alwaysStrict": false,
    "declaration": false,
    "noImplicitUseStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
